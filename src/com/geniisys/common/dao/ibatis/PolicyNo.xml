		<parameter property="sublineCd" />
		<parameter property="issCd" />
		<parameter property="issueYY" />
		<parameter property="polSeqNo" />
		<parameter property="renewNo" />
	</parameterMap>
	
	<parameterMap class="java.util.HashMap"
